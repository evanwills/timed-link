root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{css,js,json,mjs}]
indent_size = 2

[*.html]
indent_size = 4
indent_style = tab
insert_final_newline = false

[*.sql]
indent_size = 4
indent_style = tab

[*.sh]
insert_final_newline = false
indent_style = tab
indent_size = 8

[*.md]
insert_final_newline = false
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4
